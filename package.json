{
  "private": true,
  "workspaces": [
    "packages/authgear-core",
    "packages/authgear-web",
    "packages/authgear-react-native",
    "packages/authgear-capacitor"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "format": "prettier --write --list-different \"packages/*/src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint \"packages/*/src/**/*.{js.jsx,ts,tsx}\"",
    "bundle:iife": "rollup --config --configBundleType iife",
    "bundle:web-cjs": "rollup --config --configBundleType web-cjs",
    "bundle:web-module": "rollup --config --configBundleType web-module",
    "bundle:react-native": "rollup --config --configBundleType react-native",
    "bundle:capacitor": "rollup --config --configBundleType capacitor",
    "bundle": "npm run bundle:iife && npm run bundle:web-cjs && npm run bundle:web-module && npm run bundle:react-native && npm run bundle:capacitor",
    "dts": "tsc --emitDeclarationOnly && node scripts/dts.js && npm run clean-decl",
    "clean-decl": "rimraf --glob \"packages/*/src/*.d.ts\" \"packages/*/src/!(@types)/**/*.d.ts\" \"packages/*/src/*.d.ts.map\" \"packages/*/src/!(@types)/**/*.d.ts.map\"",
    "clean": "npm run clean-decl && rimraf temp \"packages/*/dist\" \"packages/*/index.d.ts\"",
    "build": "npm run clean && npm run bundle && npm run dts",
    "set-version": "node scripts/set-version.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.4",
    "@babel/plugin-transform-modules-commonjs": "^7.24.1",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/plugin-transform-typescript": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/runtime": "^7.24.4",
    "@microsoft/api-extractor": "^7.43.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.7.0",
    "prettier": "2.6.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.22.4",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.4.5"
  }
}
